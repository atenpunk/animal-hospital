<?xml version="1.0" encoding="UTF-8"?>
<pretty-config xmlns="http://ocpsoft.com/prettyfaces/2.0.4"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-2.0.4.xsd">

	<url-mapping id="root">
		<pattern value="/"></pattern>
		<view-id>/sec/home.jsf</view-id>
	</url-mapping>

	<url-mapping id="login">
		<pattern value="/login"></pattern>
		<view-id>/login.jsf</view-id>
	</url-mapping>

	<url-mapping id="logout">
		<pattern value="/logout"></pattern>
		<view-id>/login.jsf</view-id>
		<action>#{identity.logout}</action>
	</url-mapping>

	<url-mapping id="denied">
		<pattern value="/denied"></pattern>
		<view-id>/denied.jsf</view-id>
	</url-mapping>

	<url-mapping id="passwd">
		<pattern value="/user/passwd"></pattern>
		<view-id>/sec/user/passwd.jsf</view-id>
	</url-mapping>

	<url-mapping id="backOffice_01">
		<pattern value="/product/detailProduct"></pattern>
		<view-id>/sec/product/detailProduct.jsf</view-id>
	</url-mapping>
	<url-mapping id="backOffice_02">
		<pattern value="/product/addProduct"></pattern>
		<view-id>/sec/product/addProduct.jsf</view-id>
	</url-mapping>
	<url-mapping id="backOffice_03">
		<pattern value="/product/editProduct"></pattern>
		<view-id>/sec/product/editProduct.jsf</view-id>
	</url-mapping>
	<url-mapping id="backOffice_04">
		<pattern value="/category/list"></pattern>
		<view-id>/sec/category/list.jsf</view-id>
	</url-mapping>
	<url-mapping id="backOffice_05">
		<pattern value="/money/add"></pattern>
		<view-id>/sec/money/add.jsf</view-id>
	</url-mapping>
	<url-mapping id="backOffice_06">
		<pattern value="/money/adjust"></pattern>
		<view-id>/sec/money/adjust.jsf</view-id>
	</url-mapping>
	<url-mapping id="backOffice_07">
		<pattern value="/money/transfer"></pattern>
		<view-id>/sec/money/transfer.jsf</view-id>
	</url-mapping>
	<url-mapping id="backOffice_08">
		<pattern value="/money/transaction"></pattern>
		<view-id>/sec/money/transaction.jsf</view-id>
	</url-mapping>

</pretty-config>
